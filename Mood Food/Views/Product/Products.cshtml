@model IEnumerable<Mood_Food.Models.Product>
@using Mood_Food.Infrastructure;

@{
    ViewBag.Title = "Produkty";
}

<h2>Products</h2>
@Html.Action("CategoryNav", "Product")
<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-sm-6">
                <a class="text-danger nounderline" href=@Url.Action("Description","Product", new {id=item.ProductId })>
                    <h3 class="display-5 text-center">@item.Name</h3>
                    <img class="img-fluid border border-danger border-3" src=@Url.ProductImagePath(item.NameOfImage) />
                </a>
            </div>
        }
    </div>
</div>