@using Mood_Food.Models.ViewModels;
@using Mood_Food.Infrastructure;

@model Cart

@{
    ViewBag.Title = "Koszyk";
}
@Html.Action("CategoryNav", "Product")


<h2 class="text-center display-4">Koszyk</h2>
<section>
    <div class="container">

        <table class="table">
            @foreach (var item in Model.CartProducts)
            {
            <tr>
                <td class="lead text-center">@item.Product.Name</td>
                <td><img class="img-thumbnail w-50" src=@Url.ProductImagePath(item.Product.NameOfImage) /> </td>
                <td><p>@item.Product.Description</p></td>
                <td><p class="font-weight-bold">Ilość: @item.Quantity</p></td>
                <td class="font-weight-bold">@item.Value.ToString("c")</td>
                <td>@Html.ActionLink("Usuń", "Delete", "Cart", new { id = item.Product.ProductId }, new { @class = "btn btn-danger" })</td>
            </tr>
            }
        </table>
        <div class="d-flex justify-content-center" id="CenaCalkowita" style="">
            Razem: @Model.TotalValue.ToString("c")
        </div>
        <div class="SekcjaPrzyciski">
           @Html.ActionLink("Zapłać","Order","Cart",null, new { @class = "btn btn-success" })
        </div>

</div>
</section>