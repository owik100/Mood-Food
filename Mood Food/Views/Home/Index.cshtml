@using Mood_Food.Models
@using Mood_Food.Infrastructure;
@model List<Product>
@{
    ViewBag.Title = "Mood Food";
}
@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            let imageNamesArray = @Html.Raw(Json.Encode(Model.Select(x => Url.ProductImagePath(x.NameOfImage)).ToArray()));
            let counter = 0;

            setInterval(function () {
                $("#slider").children(":first").attr("src", imageNamesArray[counter]);
                counter++;
                if (counter >= imageNamesArray.length)
                    counter = 0;
            }, 1000);
        });
   </script>
}
